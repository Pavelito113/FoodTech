<!-- Views/Admin/_UserAssignment.cshtml -->
@model FoodTech.ViewModels.UserAssignmentVm

@{
    var antiForgeryToken = Html.AntiForgeryToken()?.ToString() ?? "";
    var tokenMatch = System.Text.RegularExpressions.Regex.Match(antiForgeryToken, @"value=""([^""]+)""");
    var tokenValue = tokenMatch.Success ? tokenMatch.Groups[1].Value : "";
}

<div id="userAssignmentModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-people me-2"></i>
                    Пользователи производителя: <strong>@Model.ManufacturerName</strong>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            
            <div class="modal-body">
                <!-- Привязанные пользователи -->
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">
                            <i class="bi bi-link-45deg text-success me-1"></i>
                            Привязанные пользователи
                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 ms-2">
                                @Model.AssignedUsers.Count
                            </span>
                        </h6>
                        @if (Model.AssignedUsers.Any())
                        {
                            <button type="button" 
                                    class="btn btn-sm btn-outline-secondary expand-btn"
                                    data-target="#assignedUsersCollapse">
                                <i class="bi bi-chevron-down"></i>
                            </button>
                        }
                    </div>
                    
                    @if (Model.AssignedUsers.Any())
                    {
                        <div class="collapse show" id="assignedUsersCollapse">
                            <div class="list-group" id="assignedUsersList">
                                @foreach (var user in Model.AssignedUsers)
                                {
                                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-2 mb-1">
                                                <div class="fw-semibold">@user.FirstName @user.LastName</div>
                                                @if (!string.IsNullOrEmpty(user.Company))
                                                {
                                                    <span class="badge bg-light text-dark border">@user.Company</span>
                                                }
                                            </div>
                                            <div class="d-flex flex-wrap gap-2 small">
                                                <a href="mailto:@user.Email" class="text-decoration-none text-muted">
                                                    <i class="bi bi-envelope me-1"></i>@user.Email
                                                </a>
                                                @if (!string.IsNullOrEmpty(user.Phone))
                                                {
                                                    <span class="text-muted">
                                                        <i class="bi bi-telephone me-1"></i>@user.Phone
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <button class="btn btn-sm btn-outline-danger unassign-user-btn"
                                                data-user-id="@user.Id"
                                                data-manufacturer-id="@Model.ManufacturerId"
                                                data-user-name="@($"{user.FirstName} {user.LastName}")"
                                                title="Отвязать">
                                            <i class="bi bi-unlink"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light border">
                            <div class="text-center text-muted py-3">
                                <i class="bi bi-people display-6 opacity-25"></i>
                                <p class="mt-2 mb-0">Нет привязанных пользователей</p>
                                <small class="text-muted">Используйте форму ниже для привязки пользователей</small>
                            </div>
                        </div>
                    }
                </div>

                <!-- Разделитель -->
                <hr class="my-4" />

                <!-- Доступные пользователи для привязки -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">
                            <i class="bi bi-person-plus text-primary me-1"></i>
                            Привязать нового пользователя
                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 ms-2">
                                @Model.AvailableUsers.Count
                            </span>
                        </h6>
                        @if (Model.AvailableUsers.Any())
                        {
                            <button type="button" 
                                    class="btn btn-sm btn-outline-secondary expand-btn"
                                    data-target="#availableUsersCollapse">
                                <i class="bi bi-chevron-down"></i>
                            </button>
                        }
                    </div>
                    
                    <!-- Поле поиска -->
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" 
                               class="form-control user-search-input" 
                               placeholder="Поиск по имени, email или компании...">
                        <button class="btn btn-outline-secondary clear-search-btn" type="button">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                    
                    <div class="collapse show" id="availableUsersCollapse">
                        @if (Model.AvailableUsers.Any())
                        {
                            <div class="card border">
                                <div class="card-body p-2">
                                    <select class="form-select border-0 shadow-none user-select" 
                                            size="5" 
                                            style="min-height: 150px;">
                                        <option value="" disabled selected>Выберите пользователя...</option>
                                        @foreach (var user in Model.AvailableUsers)
                                        {
                                            <option value="@user.Id" 
                                                    data-search="@($"{user.FirstName} {user.LastName} {user.Email} {user.Company}".ToLower())">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <strong>@user.FirstName @user.LastName</strong>
                                                        <div class="small text-muted">@user.Email</div>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(user.Company))
                                                    {
                                                        <span class="badge bg-light text-dark small">@user.Company</span>
                                                    }
                                                </div>
                                            </option>
                                        }
                                    </select>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted">
                                    Найдено: <span class="user-count">@Model.AvailableUsers.Count</span> пользователей
                                </small>
                                <button class="btn btn-primary px-4 assign-user-btn"
                                        data-manufacturer-id="@Model.ManufacturerId"
                                        disabled>
                                    <i class="bi bi-link me-1"></i> Привязать
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <div>
                                        <p class="mb-0">Все пользователи уже привязаны к производителям</p>
                                        <small class="text-muted">
                                            Чтобы привязать новых пользователей, сначала отвяжите их от других производителей
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="modal-footer d-flex justify-content-between">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    Привязанные пользователи имеют доступ к оборудованию этого производителя
                </small>
                <div>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Скрытое поле с токеном -->
<input type="hidden" id="userAssignmentAntiForgeryToken" value="@tokenValue" />

<style>
    .user-assignment-modal .list-group-item:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }
    
    .user-select option {
        padding: 8px 12px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
    }
    
    .user-select option:last-child {
        border-bottom: none;
    }
    
    .user-select option:hover {
        background-color: #f8f9fa !important;
    }
    
    .user-select option:checked {
        background-color: #e7f1ff !important;
        color: #0d6efd;
        font-weight: 500;
    }
</style>