@model IEnumerable<FoodTech.ViewModels.EquipmentListItemVm>

@{
    ViewData["Title"] = "Мои объявления";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">@ViewData["Title"]</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Добавить оборудование
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-inbox display-4"></i>
            <p class="mt-3 fs-5">Пока нет добавленных объявлений</p>
            <a asp-action="Create" class="btn btn-outline-primary mt-2">
                <i class="bi bi-plus-circle me-1"></i>Создать первое объявление
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                        <div class="ratio ratio-4x3 bg-light">
                            <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : "/img/no-image.png")"
                                 class="card-img-top object-fit-cover"
                                 alt="@item.Name" />
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">@item.Name</h5>

                            <p class="card-text small text-muted mb-2">
                                <i class="bi bi-tags me-1"></i>@item.CategoryName<br />
                                <i class="bi bi-diagram-3 me-1"></i>@item.IndustryName
                            </p>

                            <p class="flex-grow-1 small">@item.ShortDescription</p>

                            <div class="d-flex justify-content-between mt-2">
                                <a asp-action="Edit"
                                   asp-route-id="@item.EquipmentId"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Ред.
                                </a>

                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        onclick="postAction('/Equipment/Duplicate/@item.EquipmentId', 'Создать копию «@item.Name»?', () => location.reload())">
                                    <i class="bi bi-files"></i>
                                </button>

                                <button type="button"
                                        class="btn btn-sm btn-outline-danger"
                                        onclick="postAction('/Equipment/Delete/@item.EquipmentId', 'Удалить «@item.Name»?', () => location.reload())">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


